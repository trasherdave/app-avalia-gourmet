<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_avaliacoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_vermelho"
    android:orientation="vertical"
    tools:context=".AvaliacoesActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AvaliaGourmetApp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AvaliaGourmetApp.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ListView
        android:id="@+id/listviewAvaliacoes"
        android:layout_width="wrap_content"
        android:layout_height="404dp"
        android:layout_margin="10dp"
        android:background="@drawable/fundo_vermelho_escuro"
        android:divider="#800000"
        android:dividerHeight="2dp"
        android:elevation="5dp"
        android:padding="5dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/amarelo"
        app:srcCompat="@android:drawable/ic_menu_share" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>